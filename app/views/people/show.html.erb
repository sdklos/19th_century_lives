
<h1><%= @person.title_display %></h1>
<h2><%= link_to "Show all People", people_path %></h2>
<h2><%= link_to "Add Another Person", new_person_path %></h2>
<% if can? :update, @person %>
  <h3><%= link_to "Edit #{@person.title_display}", edit_person_path(@person) %></h3>
<% end %>
<% if can? :destroy, @person %>
  <h3><%= link_to "Delete #{@person.title_display}", person_path(@person), method: :delete %></h3>
<% end %>

<h2>Year of Birth:</h2>

<% if @person.year_of_birth %>
  <%= @person.year_of_birth %>
<% else %>
  <%= link_to "Add Year of Birth", edit_person_path(@person) %>
<% end %>

<h2>Year of Death:</h2>

<% if @person.year_of_death %>
  <%= @person.year_of_death %>
<% else %>
  <%= link_to "Add Year of Death", edit_person_path(@person) %>
<% end %>

<h2>Cities Where <%= @person.title_display %> Lived:</h2>

<% if @person.cities.count > 0 %>
  <% @person.cities.each do |city| %>
    <%= render :partial => "partials/index", locals: {path: city_path(city), item: city} %>
  <% end %>
<% else %>
  <%= link_to "Add a City", new_city_path %>
<% end %>

